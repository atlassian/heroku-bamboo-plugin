<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- internationalize your plugin -->
    <resource type="i18n" name="com.heroku language" location="english"/>

    <!-- defines an example task -->
    <taskType name="HerokuArtifactDeployment" class="com.heroku.DeployArtifactTask" key="test">
        <description>Deploy a build artifact to Heroku</description>
        <!-- Categories available in 3.1: "builder", "test" and "deployment"
        <category name=""/>
        -->
        <configuration class="com.heroku.DeployArtifactTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="editArtifactDeployment.ftl"/>
    </taskType>
</atlassian-plugin>
