<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- internationalize your plugin -->
    <!-- TODO: doesn't seem to be working -->
    <!--<resource type="i18n" name="com.heroku language" location="english"/>-->

    <taskType key="com.heroku.WarDeploymentTask" name="Heroku: WAR Deployment" class="com.heroku.WarDeploymentTask">
        <description>Deploy a WAR artifact to Heroku</description>
        <category name="deployment"/>
        <configuration class="com.heroku.WarDeploymentTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="WarDeploymentTask.ftl"/>
        <resource type="download" name="icon" location="heroku_logo.png"/>
    </taskType>

    <taskType key="com.heroku.FatJarDeploymentTask" name="Heroku: JAR Deployment" class="com.heroku.FatJarDeploymentTask">
        <description>Deploy a JAR artifact with dependencies to Heroku</description>
        <category name="deployment"/>
        <configuration class="com.heroku.FatJarDeploymentTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="FatJarDeploymentTask.ftl"/>
        <resource type="download" name="icon" location="heroku_logo.png"/>
    </taskType>

    <taskType key="com.heroku.TarGzJarDeploymentTask" name="Heroku: TAR GZ Deployment" class="com.heroku.TarGzDeploymentTask">
        <description>Deploy a TAR GZ artifact to Heroku</description>
        <category name="deployment"/>
        <configuration class="com.heroku.TargGzDeploymentTaskConfigurator"/>
        <resource type="freemarker" name="edit" location="TarGzDeploymentTask.ftl"/>
        <resource type="download" name="icon" location="heroku_logo.png"/>
    </taskType>
</atlassian-plugin>
